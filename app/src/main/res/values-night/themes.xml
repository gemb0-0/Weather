<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.DayNight">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_varient</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_varient</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:fontFamily"> @font/helvetica</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="android:editTextColor">@android:color/black</item>

        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="datepicker" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@color/secondary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>


    <style name="CustomTimePicker" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- Customize the colors -->
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:background">@color/secondary</item>
        <!-- Customize the clock face or spinner -->
        <item name="android:timePickerStyle">@style/CustomTimePickerWidget</item>
    </style>

    <!-- Customize the TimePicker widget -->
    <style name="CustomTimePickerWidget" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:headerBackground">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>



    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp" />
</resources>